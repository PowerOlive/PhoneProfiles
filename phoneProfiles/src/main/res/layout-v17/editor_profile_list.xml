<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dslv="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_phone_profiles_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="5dp" >
    
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="1dp" >

            <ImageView
                android:id="@+id/activated_profile_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:contentDescription="@string/profile_preferences_profileIcon"
                android:maxHeight="40dp"
                android:maxWidth="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile_default" />

            <TextView
                android:id="@+id/activated_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_toEndOf="@+id/activated_profile_icon"
                android:text="@string/profile_name_default"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:textColor="?attr/colorAccent"/>

            <!--
            <ImageView
                android:id="@+id/activated_profile_activated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:adjustViewBounds="true"
                android:contentDescription="@string/empty_string"
                android:maxHeight="20dp"
                android:maxWidth="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile_activated" />
                -->

            <ImageView
                android:id="@+id/activated_profile_pref_indicator"
                android:layout_width="200dp"
                android:layout_height="15dp"
                android:layout_below="@+id/activated_profile_name"
                android:layout_toEndOf="@+id/activated_profile_icon"
                android:adjustViewBounds="true"
                android:contentDescription="@string/empty_string"
                android:scaleType="@integer/profilePrefIndicatorScaleType"
                android:src="@drawable/ic_profile_pref_volume_on"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"/>

        </RelativeLayout>

    </LinearLayout>
    
    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="match_parent">

        <com.mobeta.android.dslv.DragSortListView
            android:id="@+id/main_profiles_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dip"
            android:drawSelectorOnTop="true"
            android:choiceMode="singleChoice"
            android:clipToPadding="false"
            android:scrollbarStyle="outsideOverlay"
            dslv:drag_enabled="true"
            dslv:collapsed_height="2dp"
            dslv:drag_scroll_start="0.33"
            dslv:max_drag_scroll_speed="0.5"
            dslv:float_background_color="#00000000"
            dslv:float_alpha="0.6"
            dslv:slide_shuffle_speed="0.3"
            dslv:track_drag_sort="false"
            dslv:use_default_controller="true"
            dslv:drag_handle_id="@+id/main_list_drag_handle"
            dslv:sort_enabled="true"
            dslv:remove_enabled="false"
            dslv:drag_start_mode="onMove"
            dslv:remove_mode="flingRemove" />

        <TextView
            android:id="@+id/editor_profiles_list_empty"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/profile_list_empty"
            android:gravity="center"
            android:textSize="15sp" />

    </FrameLayout>

</LinearLayout>