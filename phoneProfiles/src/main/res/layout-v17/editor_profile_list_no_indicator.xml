<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_phone_profiles_activity"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="5dp" >
    
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="1dp" >

            <ImageView
                android:id="@+id/activated_profile_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:contentDescription="@string/profile_preferences_profileIcon"
                android:maxHeight="40dp"
                android:maxWidth="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile_default" />

            <TextView
                android:id="@+id/activated_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_toEndOf="@id/activated_profile_icon"
                android:text="@string/profile_name_default"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:textColor="?attr/colorAccent"/>

            <!--
            <ImageView
                android:id="@+id/activated_profile_activated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:adjustViewBounds="true"
                android:contentDescription="@string/empty_string"
                android:maxHeight="20dp"
                android:maxWidth="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile_activated" />
                -->

        </RelativeLayout>

    </LinearLayout>
    
    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/main_profiles_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:scrollbars="vertical"
            android:scrollbarStyle="outsideOverlay" />

        <TextView
            android:id="@+id/editor_profiles_list_empty"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/profile_list_empty"
            android:gravity="center"
            android:textSize="15sp" />
    
    </FrameLayout>

</LinearLayout>