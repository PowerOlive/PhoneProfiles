<?xml version="1.0" encoding="utf-8"?>
<!--  Single List Item Design -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/act_prof_list_item_root"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingLeft="5dp"
    android:paddingStart="5dp"
    android:paddingRight="5dp"
    android:paddingEnd="5dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/act_prof_list_item_profile_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/profile_preferences_profileIcon"
        android:maxHeight="40dp"
        android:maxWidth="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile_default" />

    <TextView
        android:id="@+id/act_prof_list_item_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/act_prof_list_item_profile_icon"
        android:layout_toEndOf="@+id/act_prof_list_item_profile_icon"
        android:paddingLeft="12dp"
        android:paddingStart="12dp"
        android:paddingRight="12dp"
        android:paddingEnd="12dp"
        android:text="@string/profile_name_default"
        android:textSize="15sp"
        android:maxLines="1"/>

    <ImageView
        android:id="@+id/act_prof_list_profile_pref_indicator"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/act_prof_list_item_profile_name"
        android:layout_toRightOf="@+id/act_prof_list_item_profile_icon"
        android:layout_toEndOf="@+id/act_prof_list_item_profile_icon"
        android:adjustViewBounds="true"
        android:contentDescription="@string/empty_string"
        android:scaleType="@integer/profilePrefIndicatorScaleType"
        android:src="@drawable/ic_profile_pref_volume_on"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

</RelativeLayout>

