<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="48dp" >

    <RadioButton
        android:id="@+id/profile_pref_dlg_item_radiobtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:checked="false"
        android:focusable="false"
        android:text="@string/empty_string" />

    <ImageView
        android:id="@+id/profile_pref_dlg_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"
        android:layout_toRightOf="@+id/profile_pref_dlg_item_radiobtn"
        android:layout_toEndOf="@+id/profile_pref_dlg_item_radiobtn"
        android:adjustViewBounds="true"
        android:maxHeight="40dp"
        android:maxWidth="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile_default"
        android:contentDescription="@string/profile_preferences_profileIcon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/profile_pref_dlg_item_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/profile_name_default"
            android:textSize="15sp"
            android:maxLines="1"/>

        <ImageView
            android:id="@+id/profile_pref_dlg_item_indicator"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/empty_string"
            android:scaleType="@integer/profilePrefIndicatorScaleType"
            android:src="@drawable/ic_profile_pref_volume_on"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

    </LinearLayout>

</RelativeLayout>
