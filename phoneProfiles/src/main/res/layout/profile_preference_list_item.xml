<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp" >
	
    <ImageView
        android:id="@+id/profile_pref_dlg_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="3dp"
        android:adjustViewBounds="true"
        android:maxHeight="40dp"
        android:maxWidth="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile_default" />

    <TextView
        android:id="@+id/profile_pref_dlg_item_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/profile_pref_dlg_item_icon"
        android:paddingLeft="10dp"
        android:text="@string/profile_name_default"
        android:textSize="15sp"
        android:singleLine="true" />
    
    <ImageView
        android:id="@+id/profile_pref_dlg_item_indicator"
        android:layout_width="200dp"
        android:layout_height="15dp"
        android:layout_below="@+id/profile_pref_dlg_item_label"
        android:layout_toRightOf="@+id/profile_pref_dlg_item_icon"
        android:adjustViewBounds="true"
        android:contentDescription="@string/empty_string"
        android:scaleType="fitStart"
        android:src="@drawable/ic_profile_pref_volume_on"
        android:paddingLeft="10dp" />

	<RadioButton
        android:id="@+id/profile_pref_dlg_item_radiobtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:checked="false"
        android:focusable="false"
        android:text="@string/empty_string" />
    
</RelativeLayout>
