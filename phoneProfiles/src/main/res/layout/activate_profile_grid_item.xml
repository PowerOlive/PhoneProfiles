<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
                 android:id="@+id/act_prof_list_item_root"
                 android:layout_width="match_parent"
                 android:layout_height="75dp" >

    <ImageView
        android:id="@+id/act_prof_list_item_duration"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="5dp"
        android:scaleType="center"
        android:clickable="true"
        android:background="?attr/actionProfileToolBackground"
        android:contentDescription="@string/empty_string"
        android:src="?attr/actionProfileActivtionDuration" />

    <RelativeLayout
        android:id="@+id/act_prof_list_item_icon_root"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <ImageView
            android:id="@+id/act_prof_list_item_profile_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:maxHeight="40dp"
            android:maxWidth="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile_default"
            android:contentDescription="@string/empty_string"/>

        <TextView
            android:id="@+id/act_prof_list_item_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/act_prof_activated_profile_icon"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:singleLine="false"
            android:layout_below="@+id/act_prof_list_item_profile_icon"
            android:text="@string/profile_name_default"
            android:textSize="12sp" />

    </RelativeLayout>

</RelativeLayout>
