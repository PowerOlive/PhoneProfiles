<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Drop Shadow Stack -->
    <item>
        <shape>

            <solid android:color="#00707070" />

            <corners android:radius="3dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="#FF707070" />

            <corners android:radius="3dp" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <padding
                android:left="10dp"
                android:right="10dp" />

            <solid android:color="@color/activityBackgroundColor_dark" />

            <corners android:radius="3dp" />
        </shape>
    </item>

</layer-list>
